{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "types": [
            "vitest",
            "node"
        ],
        "skipLibCheck": true
    },
    "include": [
        "src",
        "vite.config.*",
        "vitest.config.*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}